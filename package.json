{
  "name": "auth-server",
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile server",
    "start": "./server",
    "dev": "bun run --hot src/index.ts",
    "lint": "biome check src",
    "lint:fix": "biome check src --fix",
    "check-types": "tsc --noEmit",
    "infra:start": "docker-compose up -d",
    "infra:stop": "docker-compose down",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:view": "drizzle-kit studio",
    "auth:generate": "npx @better-auth/cli@latest generate --output src/database/auth-schema.ts && biome check src/database/auth-schema.ts --fix"
  },
  "dependencies": {
    "@scalar/hono-api-reference": "^0.7.2",
    "@t3-oss/env-core": "^0.12.0",
    "better-auth": "^1.2.4",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.4",
    "hono-openapi": "^0.4.6",
    "ioredis": "^5.6.0",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "typescript": "^5.8.2"
  }
}